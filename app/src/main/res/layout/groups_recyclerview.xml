<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_700"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:elevation="3dp"
        tools:ignore="UselessParent">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:background="@drawable/background_items"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/groupIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/groups" />

            <TextView
                android:id="@+id/groupNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/groupIcon"
                android:fontFamily="@font/mitr_reg"
                android:text="Office"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/memberCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/groupNameTextView"
                android:layout_toEndOf="@id/groupIcon"
                android:fontFamily="@font/mitr_reg"
                android:text="3 Member(s)"
                android:textColor="#918A8A"
                android:textSize="16sp" />

        </RelativeLayout>
        <ImageView
            android:id="@+id/deleteGroup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/app_name"
            app:tint="@color/white" />

    </LinearLayout>


</LinearLayout>